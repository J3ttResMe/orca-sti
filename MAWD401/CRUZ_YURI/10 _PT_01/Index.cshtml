@model List<Product>
@{
}

<h2 class="text-center mb-5">List of Products</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary asp-controller="Products" asp-actions="Create">New product</a>
    </div>
    <div class="col">

    </div>

</div>

<table class="tabel">
       <thead>
           <tr>
            <th>ProductID</th>
            <th>ProductName</th>
            <th>Brand</th>
            <th>Price</th>
           </tr>
       </thead

               <tbody>
@foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Brand</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>
